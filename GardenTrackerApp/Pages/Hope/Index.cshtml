@page
@model GardenTrackerApp.Pages.Hope.IndexModel

@{
    ViewData["Title"] = "My Garden";
}

<style>
    html, body {
        height: 100%;
        overflow-y: auto;
    }

    main {
        overflow-y: auto;
        padding-bottom: 140px; 
    }

    .table-responsive {
        max-height: 70vh;
        overflow-y: auto;
    }
</style>

<main>
    <h1 class="text-center mt-4" style="color: #4CAF50;">🌱 My Garden</h1>

    <div class="d-flex justify-content-center mt-3 mb-3">
        <a asp-page="Create" class="btn btn-success" style="background-color: #4CAF50; border-color: #4CAF50; color: white;">Add New Plant</a>
    </div>

    <form method="get" class="row g-2 mb-3 justify-content-center">
        <div class="col-auto">
            <input type="text" name="CurrentFilter" value="@Model.CurrentFilter" class="form-control" placeholder="Search by Name..." />
        </div>
        <div class="col-auto">
            <select name="SelectedType" class="form-select">
                <option value="">All Types</option>
                @foreach (var t in Model.TypeList)
                {
                    <option value="@t" selected="@(t == Model.SelectedType ? "selected" : null)">@t</option>
                }
            </select>
        </div>
        <div class="col-auto">
            <select name="SelectedWater" class="form-select">
                <option value="">All Water Needs</option>
                @foreach (var w in Model.WaterList)
                {
                    <option value="@w" selected="@(w == Model.SelectedWater ? "selected" : null)">@w</option>
                }
            </select>
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">Apply</button>
            <a asp-page="./Index" class="btn btn-secondary">Clear</a>
        </div>
    </form>

    <div class="d-flex justify-content-center">
        <div class="card shadow-sm w-100">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped table-hover mb-0 align-middle w-100" style="border-collapse: separate; border-spacing: 0;">
                        <thead style="background-color: #4CAF50; color: white; font-weight: 600;">
                            <tr>
                                <th>Image</th>
                                <th>@Html.DisplayNameFor(model => model.Plant[0].Name)</th>
                                <th>@Html.DisplayNameFor(model => model.Plant[0].Type)</th>
                                <th>@Html.DisplayNameFor(model => model.Plant[0].WaterFrequency)</th>
                                <th>@Html.DisplayNameFor(model => model.Plant[0].Notes)</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Plant)
                            {
                                <tr>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.ImagePath))
                                        {
                                            <img src="@item.ImagePath" alt="@item.Name" class="img-thumbnail rounded" style="width: 50px; height: 50px; object-fit: cover;" />
                                        }
                                        else
                                        {
                                            <span class="text-muted">No image</span>
                                        }
                                    </td>
                                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Type)</td>
                                    <td>@Html.DisplayFor(modelItem => item.WaterFrequency)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Notes)</td>
                                    <td class="text-center">
                                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm me-1" style="background-color: #4CAF50; border-color: #4CAF50; color: white;">Edit</a>
                                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info btn-sm me-1" style="background-color: #17a2b8; border-color: #17a2b8;">Details</a>
                                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" style="background-color: #dc3545; border-color: #dc3545;">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</main>
