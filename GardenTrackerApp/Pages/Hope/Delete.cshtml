@page
@model GardenTrackerApp.Pages.Hope.DeleteModel

@{
    ViewData["Title"] = "Delete Plant";
}

<h1 class="text-center mt-4 text-danger">🗑️ Delete Plant</h1>

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-sm p-4 w-100" style="max-width: 600px;">
        <h4 class="mb-3 text-center">Are you sure you want to delete this plant?</h4>

        @if (!string.IsNullOrEmpty(Model.Plant.ImagePath))
        {
            <div class="text-center mb-3">
                <img src="@Model.Plant.ImagePath" alt="@Model.Plant.Name" class="img-fluid rounded" style="max-height: 200px;" />
            </div>
        }

        <dl class="row mb-4">
            <dt class="col-sm-4 fw-bold">Type</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Plant.Type)</dd>

            <dt class="col-sm-4 fw-bold">Name</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Plant.Name)</dd>

            <dt class="col-sm-4 fw-bold">Water Frequency</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Plant.WaterFrequency)</dd>

            <dt class="col-sm-4 fw-bold">Notes</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Plant.Notes)</dd>
        </dl>

        <form method="post" class="d-flex justify-content-center gap-2">
            <input type="hidden" asp-for="Plant.Id" />
            <button type="submit" class="btn btn-danger px-4">Delete</button>
            <a asp-page="./Index" class="btn btn-outline-secondary px-4">Cancel</a>
        </form>
    </div>
</div>