@page
@model GardenTrackerApp.Pages.Cade.IndexModel
@{
    ViewData["Title"] = "My Plants";
}

<style>
    .split-container {
        display: flex;
        gap: 20px;
        min-height: 600px;
    }

    .plant-detail-panel {
        flex: 1;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 20px;
        background-color: #f8f9fa;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    .plant-list-panel {
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .plant-detail-content {
        text-align: center;
        width: 100%;
    }

    .plant-detail-content img {
        max-width: 100%;
        max-height: 400px;
        border-radius: 8px;
        margin-bottom: 20px;
        box-shadow: 0 4px 6px rgba(0,0,0,0);
    }

    .plant-detail-info {
        text-align: left;
        margin-top: 20px;
    }

    .plant-detail-info p {
        margin-bottom: 10px;
        font-size: 16px;
    }

    .plant-list {
        list-style: none;
        padding: 0;
        margin: 0;
        overflow-y: auto;
        flex-grow: 1;
        border: 1px solid #ddd;
        border-radius: 8px;
    }

    .plant-list-item {
        padding: 15px;
        border-bottom: 1px solid #eee;
        cursor: pointer;
        transition: background-color 0.2s;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .plant-list-item:hover {
        background-color: #f0f0f0;
    }

    .plant-list-item.active {
        background-color: #e3f2fd;
        border-left: 4px solid #2196F3;
    }

    .plant-list-item:last-child {
        border-bottom: none;
    }

    .plant-info {
        flex-grow: 1;
    }

    .plant-name {
        font-weight: bold;
        font-size: 18px;
        margin-bottom: 5px;
    }

    .plant-type {
        color: #666;
        font-size: 14px;
    }

    .plant-actions {
        display: flex;
        gap: 5px;
    }

    .btn-sm {
        padding: 4px 8px;
        font-size: 12px;
    }

    .empty-state {
        color: #999;
        font-size: 18px;
    }

    .add-button-container {
        margin-top: 15px;
    }
</style>

<h1>My Plants</h1>

<div class="split-container">
    <!-- Left Panel - Plant Details -->
    <div class="plant-detail-panel" id="detailPanel">
        <div class="empty-state">
            <p>Select a plant to view details</p>
        </div>
    </div>

    <!-- Right Panel - Plant List -->
    <div class="plant-list-panel">
        <ul class="plant-list" id="plantList">
            @foreach (var item in Model.Plant)
            {
                <li class="plant-list-item"
                    data-id="@item.Id"
                    data-name="@item.Name"
                    data-type="@item.Type"
                    data-water="@item.WaterFrequency"
                    data-notes="@item.Notes"
                    data-image="@item.ImagePath">
                    <div class="plant-info">
                        <div class="plant-name">@item.Name</div>
                        <div class="plant-type">@item.Type</div>
                    </div>
                    <div class="plant-actions">
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm" onclick="event.stopPropagation()">Edit</a>
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" onclick="event.stopPropagation()">Delete</a>
                    </div>
                </li>
            }
        </ul>
        <div class="add-button-container">
            <a asp-page="Create" class="btn btn-primary w-100">Add New Plant</a>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const plantListItems = document.querySelectorAll('.plant-list-item');
        const detailPanel = document.getElementById('detailPanel');

        plantListItems.forEach(item => {
            item.addEventListener('click', function(e) {
                // Remove active class from all items
                plantListItems.forEach(i => i.classList.remove('active'));

                // Add active class to clicked item
                this.classList.add('active');

                // Get plant data
                const name = this.dataset.name;
                const type = this.dataset.type;
                const water = this.dataset.water;
                const notes = this.dataset.notes;
                const image = this.dataset.image;

                // Update detail panel
                let imageHtml = '';
                if (image && image !== '') {
                    imageHtml = `<img src="${image}" alt="${name}" />`;
                }

                detailPanel.innerHTML = `
                    <div class="plant-detail-content">
                        ${imageHtml}
                        <h2>${name}</h2>
                        <div class="plant-detail-info">
                            <p><strong>Type:</strong> ${type || 'Not specified'}</p>
                            <p><strong>Water Frequency:</strong> ${water || 'Not specified'}</p>
                            <p><strong>Notes:</strong> ${notes || 'No notes'}</p>
                        </div>
                    </div>
                `;
            });
        });
    });
</script>