@page
@model GardenTrackerApp.Pages.Bailey.CreateModel
@{
    ViewData["Title"] = "Add New Plant";
}

<h1>Add New Plant</h1>

<form method="post" enctype="multipart/form-data">
  
    <div class="mb-3">
        <label class="form-label">Plant Image</label>
        <input type="file" asp-for="PlantImage" class="form-control" accept="image/*" />
    </div>

    <div class="mb-3">
        <label asp-for="Plant.Name" class="form-label"></label>
        <input asp-for="Plant.Name" class="form-control" />
        <span asp-validation-for="Plant.Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Plant.Type" class="form-label"></label>
        <input asp-for="Plant.Type" class="form-control" />
        <span asp-validation-for="Plant.Type" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Plant.WaterFrequency" class="form-label"></label>
        <input asp-for="Plant.WaterFrequency" class="form-control" />
        <span asp-validation-for="Plant.WaterFrequency" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Plant.Notes" class="form-label"></label>
        <textarea asp-for="Plant.Notes" class="form-control"></textarea>
        <span asp-validation-for="Plant.Notes" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Add Plant</button>
    <a class="btn btn-secondary" asp-page="Index">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
