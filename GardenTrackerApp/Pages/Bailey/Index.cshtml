@page
@model GardenTrackerApp.Pages.Bailey.IndexModel
@{
    ViewData["Title"] = "My Plants";
}

<h1>My Plants</h1>

<p>
    <a class="btn btn-primary" asp-page="Create">Add New Plant</a>
</p>

<form method="get">
    <div class="input-group mb-3">
        <input type="text" class="form-control" placeholder="Search by name or type"
               name="SearchString" value="@Model.SearchString" />
        <button class="btn btn-outline-secondary" type="submit">Search</button>
    </div>
</form>


<table class="table table-bordered">
    <thead>
        <tr>
            <th>Image</th>
            <th>
                <a style="color:white;"
                   asp-page="./Index"
                   asp-route-sortOrder="@Model.NameSort"
                   asp-route-SearchString="@Model.SearchString">
                    Name
                </a>

            </th>
            <th>
                <a style="color:white;"
                   asp-page="./Index" asp-route-sortOrder="@Model.TypeSort" asp-route-SearchString="@Model.SearchString">Type</a>
            </th>
            <th>
                <a style="color:white;"
                   asp-page="./Index"
                   asp-route-sortOrder="@Model.WaterFrequencySort"
                   asp-route-SearchString="@Model.SearchString">
                    Water Frequency
                </a>
            </th>

            </th>
            <th>Notes</th>
            <th>Actions</th>
           
        </tr>
    </thead>
    <tbody>
        @foreach (var plant in Model.Plant)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(plant.ImagePath))
                    {
                        <img src="@plant.ImagePath" alt="@plant.Name" width="50" class="img-thumbnail" />
                    }
                </td>
                <td>@plant.Name</td>
                <td>@plant.Type</td>
                <td>@plant.WaterFrequency</td>
                <td>@plant.Notes</td>
                <td>
                    <button class="btn btn-info btn-sm" type="button" data-bs-toggle="collapse" data-bs-target="#details-@plant.Id" aria-expanded="false" aria-controls="details-@plant.Id">
                        View
                    </button>
                    <a class="btn btn-warning btn-sm" asp-page="/Bailey/Edit" asp-route-id="@plant.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-page="/Bailey/Delete" asp-route-id="@plant.Id">Delete</a>
                </td>
            </tr>
            <tr class="collapse" id="details-@plant.Id">
                <td colspan="6">
                    <div class="card p-3">
                        @if (!string.IsNullOrEmpty(plant.ImagePath))
                        {
                            <img src="@plant.ImagePath" class="img-fluid mb-3" alt="@plant.Name" />
                        }
                        <p><strong>Name:</strong> @plant.Name</p>
                        <p><strong>Type:</strong> @plant.Type</p>
                        <p><strong>Water Frequency:</strong> @plant.WaterFrequency</p>
                        <p><strong>Notes:</strong> @plant.Notes</p>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
