@page "{id:int}"
@model GardenTrackerApp.Pages.Bailey.ViewModel
@{
    ViewData["Title"] = "Plant Details";
}

<h1>Plant Details</h1>

<div class="card mb-3" style="max-width: 600px;">
    @if (!string.IsNullOrEmpty(Model.Plant.ImagePath))
    {
        <img src="@Model.Plant.ImagePath" class="card-img-top" alt="@Model.Plant.Name" />
    }

    <div class="card-body">
        <h5 class="card-title">@Model.Plant.Name (@Model.Plant.Type)</h5>
        <p class="card-text"><strong>Water Frequency:</strong> @Model.Plant.WaterFrequency</p>
        <p class="card-text"><strong>Notes:</strong> @Model.Plant.Notes</p>

        <a class="btn btn-warning" asp-page="Edit" asp-route-id="@Model.Plant.Id">Edit</a>
        <a class="btn btn-danger" asp-page="Delete" asp-route-id="@Model.Plant.Id">Delete</a>
        <a class="btn btn-secondary" asp-page="Index">Back to List</a>
    </div>
</div>
