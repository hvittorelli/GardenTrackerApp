@page "{id:int}"
@model GardenTrackerApp.Pages.Bailey.DeleteModel
@{
    ViewData["Title"] = "Delete Plant";
}

<h1>Delete Plant</h1>

<div class="alert alert-danger">
    Are you sure you want to delete <strong>@Model.Plant.Name</strong>?
</div>

<form method="post">
    <input type="hidden" asp-for="Plant.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a class="btn btn-secondary" asp-page="Index">Cancel</a>
</form>
